@{
    Layout = "../_Layout";
    ViewData["Title"] = "Вибір сторінок";
}
@model CurriculumHandler.ViewModel.SheetPickerModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h5 class="card-title">Знайдено @*@Html.Raw(Model.Doc2Sheets.Count + Model.Doc1Sheets.Count)*@ сторінок в двох документах</h5>
<p class="card-text">Виберіть сторінки, які ви бажаєте врахувати при аналізі</p>
<form asp-controller="Home" asp-action="ProcessLoading">
    <div class="row">
        <div class="col">
            <label>Семестровка</label>
            @for (int i = 0; i < Model.Doc1Sheets.Count(); i++)
            {
                <div class="form-group form-check">
                    @Html.CheckBoxFor(m => m.Doc1Sheets[i].Selected, new {@class = "form-check-input"})
                    @Html.HiddenFor(m => m.Doc1Sheets[i].Text)
                    @Html.HiddenFor(m => m.Doc1Sheets[i].Value)
                    <span>@Model.Doc1Sheets[i].Text</span>
                </div>
            }
        </div>
        <div class="col">
            <label>Навантаження</label>
            @for (int i = 0; i < Model.Doc2Sheets.Count(); i++)
            {
                <div class="form-group form-check">
                    @Html.CheckBoxFor(m => m.Doc2Sheets[i].Selected, new {@class = "form-check-input"})
                    @Html.HiddenFor(m => m.Doc2Sheets[i].Text)
                    @Html.HiddenFor(m => m.Doc2Sheets[i].Value)
                    <span>@Model.Doc2Sheets[i].Text</span>
                </div>
            }
        </div>
    </div>
    
    
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Вибрати</button>
    </div>
</form>

