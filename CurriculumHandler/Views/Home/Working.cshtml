@{
    Layout = "../_Layout";
    ViewData["Title"] = "Тест Семестровки";
}
@model CurriculumHandler.Models.Files
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="text-center">
    <h1 class="display-4">Вибір документів</h1>
    <p>Завантажте документи щоб отримати детальний звіт</p>
</div>
<form asp-controller="Home" asp-action="ProcessFiles" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="formFile1" class="form-label">Навчальний план</label>
        <input asp-for="File1" class="form-control" type="file" id="formFile1" accept=".xls,.xlsx">
    </div>
    <div class="mb-3">
        <label for="formFile2" class="form-label">Робочий навчальний план</label>
        <input asp-for="File2" class="form-control" type="file" id="formFile2" accept=".xls,.xlsx">
    </div>
    <div class="mb-3">
        <label for="formFile3" class="form-label">Розрахунок навчального навантаження</label>
        <input asp-for="File3" class="form-control" type="file" id="formFile3" accept=".xls,.xlsx">
    </div>
    <div class="text-center">
        <input type="submit" class="btn btn-light" value="Аналізувати">
    </div>
</form>
<script>
    window.onload = () => {
        if (window.location.hash == "#alert") {
            alert("Оберіть документи для обробки");
        }
    }
</script>


